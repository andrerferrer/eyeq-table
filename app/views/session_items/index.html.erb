<%= render "shared/navbar" %>
<div><h1>My Order</h1></div>
<div class="item-index-card">
  <% @current_session.items.distinct.each do |item| %>
    <div class="item-card">
      <div class="item-img">
      </div>
      <div class="item-info">
        <div><%= item.name %></div>
        <div><%= item.price * @current_session.session_items.where(item: item).count  %></div>
      </div>
    </div>
  <% end %>
</div>
<div>
<%= link_to "Send Order | #{@current_session.bill_total}", status_session_items_path, class: "btn btn-success" %>
</div>
