      <div class="item-img">
        <%= cl_image_tag item.photo.key %>
      </div>
      <div class="item-info">
        <div><%= item.name %></div>
        <div><%= item.price * @current_session.session_items.where(item: item).count  %>â‚¬</div>
      </div>
    </div>
  <% end %>
</div>
<div>
<%= link_to "Send Order | #{@current_session.bill_total}", status_session_items_path, class: "btn btn-success" %>
</div>
