<div class="container">
  <div class="edit-form">
    <%= render "edit-form" %>
  </div>
  <h3>Menu Categories</h3>
  <% @categories.each do |category| %>
    <div class="category-card">
      <div>
        <%= category.name %><%= link_to category_path(category), method: :delete, data: { confirm: "Are you sure you want to delete?" } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
        <ul>
          <% category.items.each do |item| %>
            <li><%= item.name %></li><%= link_to category_items_path(item), method: :delete, data: { confirm: "Are you sure you want to delete?" } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="add-category">
    <%= simple_form_for Category.new do |f| %>
      <%= f.input :name %>
      <%= f.button :submit, class: "btn btn-success"%>
    <% end %>
  </div>

</div>
